

{% extends 'base.html.twig' %}

{% block title %}Author Statistics{% endblock %}

{% block body %}
    <div class="container">
<h1>Author Statistics</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Book Count</th>
            </tr>
        </thead>
        <tbody>
        {% for stat in stats %}
            <tr>
                <td>{{ stat.username }}</td>
                <td>{{ stat.bookCount }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No authors found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}